---
import '~/styles/global.css'
import Header from '~/components/Header.astro'
import Footer from '~/components/Footer.astro'
import LightDarkAutoThemeLoader from '~/components/LightDarkAutoThemeLoader.astro'
import siteConfig from '~/site.config'
import { resolveKapsicum } from '~/themes/utils'
import crypto from 'crypto'

interface Props {
  title?: string
  description?: string
  tags?: string[]
  author?: string
  wide?: boolean
}

const { title, description, tags, author, wide } = Astro.props
const pageUrl = new URL(Astro.url.pathname, Astro.site).href.replace(/\/$/, '') // Remove trailing slash for consistency
const pageType = Astro.url.pathname.startsWith('/posts') ? 'article' : 'website'
const pageTitle = title ? `${title} - ${siteConfig.title}` : siteConfig.title
const pageDescription = description || siteConfig.description
const pageAuthor = author || siteConfig.author
const pageImage =
  pageType === 'article'
    ? Astro.url.origin +
      Astro.url.pathname.replace(/\/posts\//, '/social-cards/') +
      '.png'
    : `${Astro.url.origin}/social-cards/__default.png`
const pageKeywords = [
  ...new Set(siteConfig.tags.concat(tags || []).map((word) => word.toLowerCase())),
].join(', ')
const baseCssVars: { [key: string]: string } = {
  'ec-frm-frameBoxShdCssVal': 'none',
  'ec-frm-edTabBrdRad': '0',
  'ec-frm-edTabBarBrdCol':
    'color-mix(in srgb, var(--theme-foreground), 10%, transparent)',
  'ec-brdCol': 'color-mix(in srgb, var(--theme-foreground), 10%, transparent)',
}

const themes = siteConfig.themes.include
let themeMode = siteConfig.themes.mode
if (themes.length < 1) {
  throw new Error('No themes defined in site.config. Please add at least one theme.')
}
const themeIds = themes.map((t) => t.shikiTheme)
const defaultThemeDef =
  themes.find((t) => t.shikiTheme === siteConfig.themes.default) || themes[0]
let defaultTheme = defaultThemeDef.shikiTheme

// Generate a hash to use for cache busting the theme settings in localStorage.
const themeHash = crypto
  .createHash('md5')
  .update(themeMode + defaultTheme + themeIds.join(''))
  .digest('hex')
  .slice(0, 8)

// Generate CSS for all themes: --theme-* colors + --kap-* visual language
let cssLines: string[] = []
for (const theme of themes) {
  cssLines.push(`:root[data-theme="${theme.shikiTheme}"] {`)
  cssLines.push(`color-scheme: ${theme.colorScheme};`)

  // Font — per-theme override or site-wide default
  const themeFont = theme.font || siteConfig.font
  const themeFontFallback = theme.fontFallback || 'monospace'
  cssLines.push(`--theme-font: '${themeFont}';`)
  cssLines.push(`--theme-font-fallback: ${themeFontFallback};`)

  // Base colors → --theme-*
  for (const [key, value] of Object.entries(theme.colors)) {
    cssLines.push(`--theme-${key}: ${value};`)
  }

  // Kapsicum visual language → --kap-*
  const kap = resolveKapsicum(theme.colors, theme.colorScheme, theme.kapsicum)
  for (const [key, value] of Object.entries(kap)) {
    cssLines.push(`--kap-${key}: ${value};`)
  }

  // Extra vars (e.g., --theme-orange for special use)
  if (theme.extraVars) {
    for (const [key, value] of Object.entries(theme.extraVars)) {
      cssLines.push(`${key}: ${value};`)
    }
  }

  cssLines.push('}')

  // Extra CSS rules (e.g., grayscale filters)
  if (theme.extraCss) {
    cssLines.push(theme.extraCss)
  }
}
let generatedCss: string = cssLines.join('\n')
---

<!doctype html>
<html
  lang="en"
  data-theme={defaultTheme}
  data-themes={themeIds.join(',')}
  data-theme-mode={themeMode}
  data-theme-hash={themeHash}
>
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta name="generator" content={Astro.generator} />
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    <meta name="author" content={pageAuthor} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:type" content={pageType} />
    {pageImage && <meta property="og:image" content={pageImage} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    {pageImage && <meta name="twitter:image" content={pageImage} />}
    <meta name="keywords" content={pageKeywords} />
    <link rel="canonical" href={pageUrl} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={siteConfig.title}
      href={new URL('rss.xml', Astro.site)}
    />
    <title>{pageTitle}</title>
    <style is:global define:vars={baseCssVars}></style>
    <style is:inline set:html={generatedCss}></style>
    {themeMode === 'light-dark-auto' && <LightDarkAutoThemeLoader />}
  </head>
  <body class="w-full h-full m-0 text-foreground" style="background: linear-gradient(180deg, var(--kap-bg-from, var(--theme-background)) 0%, var(--kap-bg-to, var(--theme-background)) 100%); background-attachment: fixed;">
    <a href="#main-content" class="skip-to-content">Skip to content</a>
    <div class="kap-atmosphere fixed inset-0 pointer-events-none -z-1" aria-hidden="true"
      style="background: var(--kap-orb-1, none), var(--kap-orb-2, none), var(--kap-orb-3, none);"
    ></div>
    <div class="flex flex-col min-h-screen m-auto p-4 sm:py-5 sm:px-6 md:py-10 max-w-7xl">
      <Header />
      {wide ? (
        <div class="lg:flex lg:gap-6 lg:items-start flex-1">
          <div class="flex-1 min-w-0 flex flex-col">
            <main id="main-content" class="flex flex-col py-1 flex-1">
              <slot />
            </main>
          </div>
          <slot name="sidebar" />
        </div>
      ) : (
        <main id="main-content" class="flex flex-col py-1 flex-1 w-full max-w-4xl mx-auto">
          <slot />
        </main>
      )}
      <Footer />
    </div>
  </body>
</html>
