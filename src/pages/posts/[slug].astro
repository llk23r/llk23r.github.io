---
import type { GetStaticPaths } from 'astro'
import Layout from '~/layouts/Layout.astro'
import { SeriesGroup, TagsGroup, getSortedPosts } from '~/utils'
import PostPreview from '~/components/PostPreview.astro'
import DividerText from '~/components/DividerText.astro'
import { getCollection, render, type CollectionEntry } from 'astro:content'
import PostAddendum from '~/components/PostAddendum.astro'
import TableOfContents from '~/components/TableOfContents.astro'
import { Image } from 'astro:assets'
import siteConfig from '~/site.config'
import Tags from '~/components/Tags.astro'
import PostInfo from '~/components/PostInfo.astro'
import ScrollUpButton from '~/components/ScrollUpButton.astro'
import type { Collation } from '~/types'
import ChevronsRight from '~/icons/chevrons-right.svg'
import { getPostSequenceContext } from '~/utils'

export const getStaticPaths = (async () => {
  const posts = await getSortedPosts()
  return posts.map((post) => {
    const { prev, next } = getPostSequenceContext(post, posts)
    return {
      params: { slug: post.id },
      props: { post, prev, next },
    }
  })
}) satisfies GetStaticPaths

const { post, prev, next } = Astro.props
const postData = post.data
const { headings, Content: PostContent, remarkPluginFrontmatter } = await render(post)
const minutesRead = remarkPluginFrontmatter?.minutesRead
const addendum = await getCollection('addendum')
let AddendumContent
let addendumAvatarImage
if (addendum.length > 0) {
  const addendumEntry = addendum[0]
  const { Content } = await render(addendumEntry)
  AddendumContent = Content
  addendumAvatarImage = addendumEntry.data.avatarImage
}

const sortedPosts = await getSortedPosts()

// Get series posts if this post is part of a series
let series: Collation<'posts'> | undefined
let prevPostInSeries: CollectionEntry<'posts'> | undefined
let nextPostInSeries: CollectionEntry<'posts'> | undefined
let seriesPostNumber: number | undefined
let seriesTotal: number | undefined
if (postData.series) {
  const seriesGroup = await SeriesGroup.build(sortedPosts)
  series = seriesGroup.match(postData.series)
  if (!series) {
    throw new Error(`Series "${postData.series}" not found`)
  }
  const sequenceContext = getPostSequenceContext(post, series.entries)
  prevPostInSeries = sequenceContext.prev
  nextPostInSeries = sequenceContext.next
  seriesPostNumber = series.entries.findIndex((p) => p.id === post.id) + 1
  seriesTotal = series.entries.length
}
const showSeries = series && series.entries.length > 1

let tags: Collation<'posts'>[] | undefined
if (postData.tags && postData.tags.length > 0) {
  const tagsGroup = await TagsGroup.build(sortedPosts)
  tags = tagsGroup.matchMany(postData.tags)
}

// Extract numeric minutes for the time-remaining script
const totalMinutes = minutesRead ? parseInt(minutesRead) : 0
---

<Layout
  title={postData.title}
  description={postData.description}
  author={postData.author}
  tags={postData.tags}
>
  <!-- Reading progress bar -->
  <div class="reading-progress" id="reading-progress" aria-hidden="true">
    <div class="reading-progress-fill" id="reading-progress-fill"></div>
    {totalMinutes > 0 && (
      <span class="reading-progress-time" id="reading-progress-time"></span>
    )}
  </div>

  <article class="max-w-full py-7.5" data-pagefind-body>
    {
      postData.coverImage && (
        <Image
          priority
          layout="constrained"
          src={postData.coverImage.src}
          alt={postData.coverImage.alt}
          class="w-full rounded-xl mb-5"
        />
      )
    }
    <div class="md:mx-2">
      <!-- Breadcrumbs -->
      <nav class="post-breadcrumbs" aria-label="Breadcrumb">
        <a href="/">Home</a>
        {series && (
          <>
            <span class="sep" aria-hidden="true">›</span>
            <a href={series.url}>{series.title.toUpperCase()}</a>
          </>
        )}
        <span class="sep" aria-hidden="true">›</span>
        <span class="current">{postData.title}</span>
      </nav>

      {/* Series context banner */}
      {series && seriesPostNumber && seriesTotal && (
        <div class="series-context">
          <span class="series-context-label">
            {series.title.toUpperCase()} · Part {seriesPostNumber} of {seriesTotal}
          </span>
          <span class="series-context-nav">
            {prevPostInSeries && (
              <a href={`/posts/${prevPostInSeries.id}`} class="series-context-link">← Previous</a>
            )}
            {prevPostInSeries && nextPostInSeries && (
              <span class="series-context-sep">·</span>
            )}
            {nextPostInSeries && (
              <a href={`/posts/${nextPostInSeries.id}`} class="series-context-link next">Next →</a>
            )}
          </span>
        </div>
      )}

      <h1 id={post.id} class="mb-4 mt-8 text-[1.75rem] text-heading1 font-semibold" style="font-family: 'Inter Variable', system-ui, sans-serif;">
        {postData.title}
      </h1>
      <div class="my-2 pl-4 py-2" style="border-left: 2px solid var(--kap-border-right);">
        <PostInfo post={post} class="mb-1" />
        {
          tags && (
            <div class="mt-4">
              <Tags tags={tags} />
            </div>
          )
        }
      </div>
      {
        postData.disclaimer && (
          <p class="text-foreground/50 text-sm italic mt-4" style="font-family: 'Inter Variable', system-ui, sans-serif;">
            {postData.disclaimer}
          </p>
        )
      }
    </div>
    <div class="flex flex-col lg:gap-1 2xl:gap-18 lg:flex-row lg:items-start">
      {postData.toc && headings.length > 0 && <TableOfContents headings={headings} />}
      <div class="mb-5 lg:min-w-full 2xl:min-w-full prose" id="prose-content">
        <PostContent />
      </div>
    </div>
  </article>
  {
    nextPostInSeries && (
      <a
        href={`/posts/${nextPostInSeries.id}`}
        class="button justify-center -mt-8 mb-8 !whitespace-normal text-center flex gap-2 sm:gap-3 items-center"
      >
        <span>Next: {nextPostInSeries.data.title}</span>
        <ChevronsRight class="size-5 hidden sm:block" />
      </a>
    )
  }
  {
    AddendumContent && (
      <PostAddendum avatarImage={addendumAvatarImage}>
        <AddendumContent />
      </PostAddendum>
    )
  }
  {
    showSeries && series ? (
      <section>
        <DividerText text={`${series.title} Series`} />
        {series.entries.map((seriesPost) => (
          <PostPreview post={seriesPost} />
        ))}
      </section>
    ) : prev || next ? (
      <section>
        <DividerText text="More Posts" />
        {prev && <PostPreview post={prev} />}
        {next && <PostPreview post={next} />}
      </section>
    ) : null
  }
  <ScrollUpButton />
</Layout>

<style>
  /* Reading progress bar */
  .reading-progress {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    z-index: 200;
    display: flex;
    align-items: center;
  }

  .reading-progress-fill {
    height: 100%;
    width: 0%;
    background: linear-gradient(to right, var(--theme-accent), color-mix(in srgb, var(--theme-accent) 70%, var(--theme-foreground)));
    border-radius: 0 2px 2px 0;
    transition: width 100ms ease-out;
  }

  .reading-progress-time {
    position: fixed;
    top: 6px;
    right: 12px;
    font-family: 'JetBrains Mono Variable', monospace;
    font-size: 11px;
    color: color-mix(in srgb, var(--theme-foreground) 45%, transparent);
    opacity: 0;
    transition: opacity 300ms ease;
    pointer-events: none;
  }

  .reading-progress:hover .reading-progress-time,
  .reading-progress-time.visible {
    opacity: 1;
  }

  /* Breadcrumbs */
  .post-breadcrumbs {
    font-family: 'JetBrains Mono Variable', monospace;
    font-size: 13px;
    color: color-mix(in srgb, var(--theme-foreground) 50%, transparent);
    margin-bottom: 0.5rem;
  }

  @media (min-width: 640px) {
    .post-breadcrumbs {
      font-size: 11px;
    }
  }

  .post-breadcrumbs a {
    color: inherit;
    text-decoration: none;
    padding-block: 4px;
  }

  .post-breadcrumbs a:hover {
    color: var(--theme-accent);
  }

  .post-breadcrumbs .sep {
    margin: 0 0.5rem;
    opacity: 0.5;
  }

  .post-breadcrumbs .current {
    color: color-mix(in srgb, var(--theme-foreground) 65%, transparent);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 40ch;
    display: inline-block;
    vertical-align: bottom;
  }

  /* Series context banner */
  .series-context {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 8px;
    padding: 10px 16px;
    margin-top: 1rem;
    border-radius: 8px;
    background: color-mix(in srgb, var(--theme-accent) 4%, transparent);
    border: 1px solid color-mix(in srgb, var(--theme-accent) 10%, transparent);
    font-family: 'JetBrains Mono Variable', monospace;
    font-size: 12px;
  }

  .series-context-label {
    color: color-mix(in srgb, var(--theme-accent) 70%, transparent);
    font-weight: 500;
  }

  .series-context-nav {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .series-context-link {
    color: color-mix(in srgb, var(--theme-foreground) 40%, transparent);
    text-decoration: none;
  }

  .series-context-link:hover {
    color: var(--theme-accent);
  }

  .series-context-link.next {
    color: color-mix(in srgb, var(--theme-accent) 80%, transparent);
  }

  .series-context-sep {
    color: color-mix(in srgb, var(--theme-foreground) 20%, transparent);
  }
</style>

<script define:vars={{ totalMinutes }}>
  function initReadingProgress() {
    const fill = document.getElementById('reading-progress-fill')
    const timeEl = document.getElementById('reading-progress-time')
    const article = document.querySelector('article')
    if (!fill || !article) return

    function update() {
      const articleRect = article.getBoundingClientRect()
      const articleTop = window.scrollY + articleRect.top
      const articleHeight = articleRect.height
      const scrolled = window.scrollY - articleTop
      const progress = Math.min(Math.max(scrolled / (articleHeight - window.innerHeight), 0), 1)

      fill.style.width = `${progress * 100}%`

      if (timeEl && totalMinutes > 0) {
        const remaining = Math.ceil(totalMinutes * (1 - progress))
        if (remaining > 0 && progress > 0.02 && progress < 0.98) {
          timeEl.textContent = `~${remaining} min left`
          timeEl.classList.add('visible')
        } else if (progress >= 0.98) {
          timeEl.textContent = ''
          timeEl.classList.remove('visible')
        } else {
          timeEl.classList.remove('visible')
        }
      }
    }

    window.addEventListener('scroll', update, { passive: true })
    update()
  }

  initReadingProgress()
</script>
