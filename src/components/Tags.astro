---
import type { Collation } from '~/types'

interface Props {
  tags: Collation<'posts'>[]
}

const { tags } = Astro.props
---

<div class="flex flex-wrap gap-3 text-sm">
  {
    tags.map((tag) => (
      <a
        href={tag.url}
        class="py-1 px-3 rounded-2xl transition-colors text-accent/90"
        style="background: var(--kap-surface-bg); border: 1px solid var(--kap-border-left); border-right-color: var(--kap-border-right);"
      >
        {tag.title}
      </a>
    ))
  }
</div>
