<script is:inline>
  ;(function loadTheme() {
    const pageDefaultTheme = document.documentElement.getAttribute('data-theme')
    const pageThemes = (document.documentElement.getAttribute('data-themes') || '').split(',')
    const pageThemeHash = document.documentElement.getAttribute('data-theme-hash')
    if (!pageDefaultTheme || !pageThemeHash || pageThemes.length < 1) {
      throw new Error('Theme attributes are required.')
    }
    const storedTheme = localStorage.getItem('data-theme')
    const storedThemeHash = localStorage.getItem('data-theme-hash')
    const themeHashMatches = storedThemeHash === pageThemeHash

    if (!storedTheme || !storedThemeHash || !themeHashMatches) {
      // First load or config changed — use configured default
      var detected = pageDefaultTheme
      localStorage.setItem('data-theme', detected)
      localStorage.setItem('data-theme-hash', pageThemeHash)
      document.documentElement.setAttribute('data-theme', detected)
    } else if (themeHashMatches && pageThemes.includes(storedTheme)) {
      // Stored theme is valid — apply it
      document.documentElement.setAttribute('data-theme', storedTheme)
    }
  })()
</script>
